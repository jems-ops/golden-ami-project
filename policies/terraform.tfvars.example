# Example Terraform variables for IAM role and policy creation
# Copy this file to terraform.tfvars and modify as needed

# AWS Region
aws_region = "us-east-1"

# IAM Role and Policy Names (optional - will use defaults if not specified)
# role_name   = "CustomPackerAMIBuilderRole"
# policy_name = "CustomPackerAMIBuilderPolicy"

# IAM Path (optional)
# iam_path = "/golden-ami/"

# Session Duration (1-12 hours)
max_session_duration = 3600  # 1 hour

# Cross-account access (optional)
# trusted_account_ids = ["123456789012", "987654321098"]
# external_id = "my-unique-external-id"
allow_current_account_assume = true

# KMS Configuration
# Specify specific KMS key ARNs or use ["*"] for all keys
kms_key_arns = ["*"]

# Additional permissions
enable_cloudwatch_logs = true
enable_ssm_access      = true

# Additional managed policies to attach (optional)
# additional_managed_policies = [
#   "arn:aws:iam::aws:policy/CloudWatchAgentServerPolicy"
# ]

# Custom policy statements (optional)
# additional_policy_statements = [
#   {
#     sid       = "CustomS3Access"
#     effect    = "Allow"
#     actions   = ["s3:GetObject", "s3:PutObject"]
#     resources = ["arn:aws:s3:::my-packer-bucket/*"]
#     conditions = []
#   }
# ]

# Instance Profile
create_instance_profile = true

# IAM User for programmatic access (alternative to role assumption)
create_iam_user    = false
create_access_key  = false
store_keys_in_ssm  = false

# Tags
tags = {
  Project     = "Golden AMI"
  Environment = "shared"
  ManagedBy   = "Terraform"
  Purpose     = "Packer AMI Building"
}
